<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25px"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:id="@+id/ll"
    android:paddingBottom="10px"
    android:layout_marginTop="20px"
    android:background="@drawable/bg_ffffff_5dp">
    <RelativeLayout
        android:id="@+id/rl"
        android:elevation="5px"
        android:layout_margin="5px"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.yiwo.fuzhoudian.widget.CustomRoundAngleImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="320px"
                android:scaleType="centerCrop"
                android:src="@mipmap/zanwutupian"
                test:left_top_radius_m="16px"
                test:right_top_radius_m="16px"  />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="巴厘岛小众神秘彭丽普兰，被认为是世界上最清洁的三个村庄之一巴厘岛小众神秘彭丽普兰，被认为是世界上最清洁的三个村庄之一"
                android:textColor="#424242"
                android:textSize="32px" />
            <TextView
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:id="@+id/tv_time"
                android:ellipsize="end"
                android:textColor="@color/color_101010"
                android:textSize="24px"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/bg_9a9a9a_border_5dp"
                    android:textSize="24px"
                    android:id="@+id/tv_btn_delete"
                    android:textColor="@color/color_101010"
                    android:gravity="center"
                    android:text="删除"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50px" />
                <TextView
                    android:background="@drawable/bg_9a9a9a_border_5dp"
                    android:textSize="24px"
                    android:textColor="@color/color_101010"
                    android:id="@+id/tv_btn_edit"
                    android:gravity="center"
                    android:text="编辑"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="40px"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50px" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>