<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_home_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="414dp">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/zanwutupian"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="316dp"/>
        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="23dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/shop_home_back"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <ImageView
                android:layout_marginRight="27dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/shop_home_star_border"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/ll_shop_info"
            android:src="@mipmap/shop_home_image"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:id="@+id/ll_shop_info"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_ffffff_20dp_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="23dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/iv_tel"
                    android:layout_alignParentTop="true"
                    android:textSize="20dp"
                    android:textColor="@color/color_666666"
                    android:text="物只卤鹅旗舰店"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_tel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/home_tel"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/shop_home_ying"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:ellipsize="end"
                    android:text="生鲜水果、烟酒副食、精品大鹅先喷喷好吃看得见，不吃后悔了啊，过这村没这店！"
                    android:lines="2"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/shop_home_loc_green"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:text="松北区万达城丰源街1033号"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_marginRight="5dp"
                    android:text="距离您158米"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/shop_home_juli"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
