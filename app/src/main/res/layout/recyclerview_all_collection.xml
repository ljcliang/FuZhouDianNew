<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:background="#f6f6f6"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="8dp"
        android:background="@drawable/bg_ffffff_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:layout_marginTop="12dp"

            android:layout_toLeftOf="@+id/rl_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_head"
                    android:src="@mipmap/my_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:maxLength="7"
                    android:ellipsize="end"
                    android:text="啊啊啊啊啊啊啊啊啊"
                    android:textSize="14sp"
                    android:textColor="@color/color_101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginRight="6dp"
                    android:background="@drawable/bg_c69e76_2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_101010"
                        android:text=""
                        android:lines="1"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_level"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/shop_lv_jin"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="9dp"
                android:text="我是标题我是标题我题..."
                android:id="@+id/tv_title"
                android:textColor="@color/color_101010"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_fabu_time"
                android:layout_marginTop="9dp"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_xiangguanhuodong"
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rl_canyuxiezuo"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_canyuxiezuo_num"
                    android:layout_centerVertical="true"
                    android:text="团友共有 0 人参与写作"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_alignBottom="@+id/rl_iv"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:background="@drawable/bg_9a9a9a_border_5dp"
            android:textColor="#666666"
            android:textSize="13sp"
            android:text="取消收藏"
            android:layout_width="80dp"
            android:layout_height="20dp" />
        <RelativeLayout
            android:id="@+id/rl_iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_width="110dp"
            android:layout_height="165dp">
            <com.yiwo.fuzhoudian.widget.CustomRoundAngleImageView
                android:id="@+id/iv"
                test:radius_m="5dp"
                android:src="@mipmap/zanwutupian"
                android:scaleType="centerCrop"
                android:layout_width="110dp"
                android:layout_height="165dp"/>
            <RelativeLayout
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="@drawable/black_transparent_color"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_look_num"
                    android:src="@mipmap/eye_white"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:id="@+id/tv_look_num"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:maxLength="5"
                    android:ellipsize="end"
                    android:text="1235"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_white_ffffff"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
