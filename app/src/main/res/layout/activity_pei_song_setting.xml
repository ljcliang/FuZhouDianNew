<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".pages.PeiSongSettingActivity">
    <RelativeLayout style="@style/TopBarStyle">

        <RelativeLayout
            android:id="@+id/rl_set_return"
            style="@style/TopBarStyle_RlBack">

            <ImageView style="@style/TopBarStyle_IvBackWhite" />

        </RelativeLayout>

        <TextView
            android:id="@+id/titleTv"
            style="@style/TopBarStyle_TvTitle"
            android:text="配送设置" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_daodianziti"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ck_daodian"
            android:src="@mipmap/checkbox_black_true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text="到店自提"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_peisongdaojia"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ck_peisong"
            android:src="@mipmap/checkbox_black_false"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text="配送到家"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="配 送 费   "
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:lines="1"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/edt_peisongfei"
            android:inputType="numberDecimal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/color_101010"
            android:background="@drawable/bg_d8d8d8_0px"
            android:textSize="14sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text="元"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="配送范围"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:lines="1"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/edt_peisongfanwei"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/color_101010"
            android:background="@drawable/bg_d8d8d8_0px"
            android:textSize="14sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="购物满（"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:lines="1"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/edt_gouman"
            android:inputType="numberDecimal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/color_101010"
            android:background="@drawable/bg_d8d8d8_0px"
            android:textSize="14sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text="）元，免收配送费"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_btn_sure"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/color_white_ffffff"
        android:text="确 定"
        android:background="@drawable/bg_4e94a0_15dp"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="30dp"/>
</LinearLayout>