<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="102dp">
        <RelativeLayout
            android:background="@drawable/bg_ffffff_border_15dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="28dp">
            <RelativeLayout
                android:id="@+id/rl_sousuo"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/home_sousuo"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <EditText
                android:layout_marginRight="10dp"
                android:textColorHint="@color/color_white_ffffff"
                android:hint="搜 索"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_sousuo"
                android:layout_toLeftOf="@+id/ll_dingwei"
                android:textSize="14sp"
                android:textColor="@color/color_white_ffffff"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:paddingRight="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_dingwei"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/home_dingwei"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:id="@+id/tv_dingwei"
                    android:text="哈尔滨松北"
                    android:textSize="14sp"
                    android:textColor="@color/color_white_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_home_top_1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_home_top_1"
                    android:layout_centerInParent="true"
                    android:text="关注"
                    android:textColor="@color/color_white_ffffff"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/v_home_top_1"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_c69e76_10dp_top"
                    android:layout_width="66dp"
                    android:layout_height="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_home_top_2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_home_top_2"
                    android:layout_centerInParent="true"
                    android:text="推荐"
                    android:textColor="@color/color_white_ffffff"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/v_home_top_2"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_c69e76_10dp_top"
                    android:layout_width="66dp"
                    android:layout_height="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_home_top_3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/color_white_ffffff"
                    android:textSize="20sp"
                    android:id="@+id/tv_home_top_3"
                    android:layout_centerInParent="true"
                    android:text="周边"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/v_home_top_3"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_c69e76_10dp_top"
                    android:layout_width="66dp"
                    android:layout_height="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="7dp"
        android:background="@drawable/bg_f8f8f8_20dp_top"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
