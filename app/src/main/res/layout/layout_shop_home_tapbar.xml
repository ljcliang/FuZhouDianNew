<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_tab_bar"
    android:background="@color/color_white_ffffff"
    android:elevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v_staus"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:background="@drawable/bg_4e94a0_20dp_top_left"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <RelativeLayout
            android:id="@+id/rl_shop_home_tap1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/selector_tv_shop_home_top"
                android:id="@+id/tv_shop_home_tap1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="全部商品"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_tv_shop_home_top"
                android:textSize="14sp"
                android:layout_width="72dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_shop_home_tap2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/selector_tv_shop_home_top"
                android:id="@+id/tv_shop_home_tap2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="动 态"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_tv_shop_home_top"
                android:textSize="14sp"
                android:layout_width="72dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_shop_home_tap3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/selector_tv_shop_home_top"
                android:id="@+id/tv_shop_home_tap3"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="特价优惠"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_tv_shop_home_top"
                android:textSize="14sp"
                android:layout_width="72dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bg_ffffff_20dp_top_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_d8d8d8_border_20dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_sousuo"
                    android:src="@mipmap/shop_home_sousuo"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <EditText
                    android:layout_toRightOf="@+id/iv_sousuo"
                    android:layout_centerVertical="true"
                    android:hint="在此输入搜索的内容"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"
                    android:id="@+id/edt"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/color_999999"
                    android:background="@null"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/tv_sousuo"
                    android:background="@color/color_d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:text="搜 索"
                    android:id="@+id/tv_sousuo"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="3dp"
        android:background="@color/color_f3f3f3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_bg_shop_home_top_kinds"
            android:id="@+id/rl1"
            android:layout_width="70dp"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="酒水饮料"
                android:textColor="@color/color_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="visible"
                android:id="@+id/v1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_c69e76_10dp_bottom"
                android:layout_width="40dp"
                android:layout_height="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/selector_bg_shop_home_top_kinds"
            android:layout_marginLeft="5dp"
            android:id="@+id/rl2"
            android:layout_width="70dp"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="水果蔬菜"
                android:textColor="@color/color_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="gone"
                android:id="@+id/v2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_c69e76_10dp_bottom"
                android:layout_width="40dp"
                android:layout_height="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/selector_bg_shop_home_top_kinds"
            android:layout_marginLeft="5dp"
            android:id="@+id/rl3"
            android:layout_width="70dp"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="副食"
                android:textColor="@color/color_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="gone"
                android:id="@+id/v3"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_c69e76_10dp_bottom"
                android:layout_width="40dp"
                android:layout_height="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
