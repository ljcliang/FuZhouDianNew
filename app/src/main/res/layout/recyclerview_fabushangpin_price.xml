<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_btn_minus"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/minus"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="现价格"
            android:textColor="@color/color_black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/edt_jiage"
            android:inputType="numberDecimal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/color_101010"
            android:layout_gravity="right"
            android:background="@drawable/bg_d8d8d8_0px"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="元/ 规格"
            android:textColor="@color/color_black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/edt_guige"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint=""
            android:textColor="@color/color_101010"
            android:textColorHint="@color/color_101010"
            android:layout_gravity="right"
            android:background="@drawable/bg_d8d8d8_0px"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="库存"
            android:textColor="@color/color_black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/edt_kucun"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:background="@drawable/bg_d8d8d8_0px"
            android:gravity="right"
            android:inputType="number"
            android:textColor="@color/color_101010"
            android:textSize="15sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="原价格"
                android:textColor="@color/color_black_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:id="@+id/edt_yuan_jiage"
                android:inputType="numberDecimal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/color_101010"
                android:layout_gravity="right"
                android:background="@drawable/bg_d8d8d8_0px"
                android:textSize="15sp"
                android:gravity="right"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="元"
                android:textColor="@color/color_black_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_jiage_tishi"
            android:layout_marginRight="2dp"
            android:src="@mipmap/tishi"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:background="#d8d8d8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
