<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="541px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="541px"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_24px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="36px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:textSize="34px"
                android:textStyle="bold"
                android:textColor="@color/color_101010"
                android:text="清除缓存"
                android:layout_centerHorizontal="true"
                android:id="@+id/pop_dialog_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:layout_below="@+id/pop_dialog_title"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginBottom="30px"
                android:layout_centerHorizontal="true"
                android:text="为了保证您的信息安全，在注销登录后，应用程序将会关闭。再次使用请手动启动程序。"
                android:id="@+id/pop_dialog_message"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/color_101010"
                android:textSize="26px" />

        </RelativeLayout>
        <View
            android:layout_marginRight="2px"
            android:layout_marginLeft="2px"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadadd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <RelativeLayout
                android:background="@drawable/sl_pop_dialog_l"
                android:layout_marginRight="0.5px"
                android:id="@+id/rl_pop_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true">

                <TextView
                    android:text="算了"
                    android:id="@+id/pop_dialog_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_101010"
                    android:textSize="30px" />

            </RelativeLayout>
            <View
                android:background="#dadadd"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:background="@drawable/sl_pop_dialog_l"
                android:layout_marginLeft="0.5px"
                android:id="@+id/rl_pop_dialog_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true">

                <TextView
                    android:text="清除"
                    android:id="@+id/pop_dialog_sure_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_101010"
                    android:textSize="30px" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>