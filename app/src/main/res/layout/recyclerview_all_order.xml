<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_8dp"
    android:paddingBottom="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/my_head"
                android:id="@+id/iv_userhead"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_username"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_staus"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:text=""
            android:textColor="@color/color_d84c37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_all_order_rv_rl_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yiwo.fuzhoudian.widget.CustomRoundAngleImageView
            android:src="@mipmap/zanwutupian"
            test:radius_m="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment_all_order_rv_iv"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_alignTop="@+id/fragment_all_order_rv_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/fragment_all_order_rv_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_goods_name"
                android:text=""
                android:layout_marginTop="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_101010"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_goods_info"
                android:text=""
                android:layout_marginTop="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/tv_order_sn"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/color_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="10sp"
                    android:text="¥ "
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="bottom"
                    android:textSize="15sp"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:text="X"
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="15sp"
                    android:text="合计："
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:textSize="10sp"
                    android:text="¥ "
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_all_price"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="bottom"
                    android:textSize="15sp"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_btns"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_btn_delete"
                android:background="@drawable/bg_gray_border_27px"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#686868"
                android:text="删除"
                android:layout_width="62dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/tv_btn_yipingjia"
                android:background="@drawable/bg_gray_border_27px"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#686868"
                android:text="已评价"
                android:layout_width="62dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/tv_btn_tuikuan"
                android:textColor="@color/color_d84c37"
                android:background="@drawable/bg_d84c37_border_27px"
                android:textSize="11sp"
                android:layout_width="62dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="确认退款"
                 />

            <TextView
                android:id="@+id/tv_btn_chudan"
                android:textColor="@color/color_d84c37"
                android:background="@drawable/bg_d84c37_border_27px"
                android:textSize="11sp"
                android:layout_width="62dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="出单"
                 />

            <TextView
                android:id="@+id/tv_btn_jujuejiedan"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_d84c37"
                android:background="@drawable/bg_d84c37_border_27px"
                android:textSize="11sp"
                android:layout_width="62dp"
                android:layout_height="22dp"
                android:text="拒绝接单"
                 />
            <TextView
                android:id="@+id/tv_btn_querenshouhuo"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_d84c37"
                android:background="@drawable/bg_d84c37_border_27px"
                android:textSize="11sp"
                android:layout_width="62dp"
                android:layout_height="22dp"
                android:text="待签收"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
