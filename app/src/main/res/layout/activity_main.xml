<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:paddingBottom="55dp"
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_main_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@color/color_white_ffffff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/ll_btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_bottom_1"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/selector_iv_main_bottom1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@color/color_white_ffffff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/ll_btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_bottom_2"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/selector_iv_main_bottom2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/ll_btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_white_ffffff"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:background="@drawable/bg_main_bottom_fabu"
                        android:layout_centerHorizontal="true"
                        android:layout_width="55dp"
                        android:layout_height="55dp">
                        <ImageView
                            android:id="@+id/iv_bottom_3"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/home_bottom3_fabu"
                            android:layout_width="22dp"
                            android:layout_height="22dp"/>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@color/color_white_ffffff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/ll_btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_bottom_4"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/selector_iv_main_bottom3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@color/color_white_ffffff"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/ll_btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_bottom_5"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/selector_iv_main_bottom4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bottom_1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:textColor="@drawable/selector_tv_main_bottom"
                android:text="首页"
                android:textSize="8.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_bottom_2"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"
                android:textColor="@drawable/selector_tv_main_bottom"
                android:text="订单"
                android:textSize="8.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_bottom_3"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"
                android:textColor="@drawable/selector_tv_main_bottom"
                android:text="发布"
                android:textSize="8.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_bottom_4"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"
                android:textColor="@drawable/selector_tv_main_bottom"
                android:text="消息"
                android:textSize="8.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_bottom_5"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"
                android:textColor="@drawable/selector_tv_main_bottom"
                android:text="我的"
                android:textSize="8.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>