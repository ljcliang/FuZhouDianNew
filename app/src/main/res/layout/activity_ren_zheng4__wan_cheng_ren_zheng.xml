<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.renzheng.RenZheng4_WanChengRenZhengActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginRight="10dp"
            android:text="微信账户绑定，输入确认金额"
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:hint="在这里输入金额"
                android:id="@+id/edt_shop_name"
                android:layout_centerVertical="true"
                android:layout_marginBottom="1dp"
                android:textSize="14sp"
                android:textColor="@color/color_101010"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_below="@+id/edt_shop_name"
                android:background="@color/color_d8d8d8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:text="完成验证"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_4e94a0_20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="170dp"
        android:layout_height="35dp"/>
</LinearLayout>