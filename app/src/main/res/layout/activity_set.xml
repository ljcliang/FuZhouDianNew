<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.fuzhoudian.pages.SetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_set_rl_top"
            style="@style/TopBarStyle">

            <TextView
                style="@style/TopBarStyle_TvTitle"
                android:text="设置" />

            <RelativeLayout
                android:id="@+id/activity_set_rl_back"
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/TopBarStyle_IvBackWhite" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/color_white_ffffff"
            android:id="@+id/activity_set_rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="意见反馈"
                android:textColor="#5A5A5A"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/activity_set_rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_white_ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="清除缓存"
                android:textColor="#5A5A5A"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:text="0MB"
                    android:textColor="#5A5A5A"
                    android:textSize="11sp"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:background="@color/color_white_ffffff"
            android:id="@+id/activity_set_rl_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="用户协议"
                android:textColor="#5A5A5A"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:background="@color/color_white_ffffff"
            android:id="@+id/activity_set_rl_user_agreement_1"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="隐私政策"
                android:textColor="#5A5A5A"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:background="@color/color_white_ffffff"
            android:id="@+id/activity_set_rl_check_verson"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="检查版本"
                android:textColor="#5A5A5A"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />
        <Button
            android:stateListAnimator="@null"
            android:id="@+id/activity_set_exit_login_bt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white_ffffff"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:paddingLeft="12dp"
            android:gravity="start|center_vertical"
            android:text="注销登录"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />
    </LinearLayout>


</RelativeLayout>
