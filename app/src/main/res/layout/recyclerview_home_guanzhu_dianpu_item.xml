<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="18dp"
    android:orientation="vertical"
    android:background="@drawable/bg_ffffff_5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="14dp"
            android:src="@mipmap/my_head"
            android:layout_width="88dp"
            android:layout_height="88dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLength="8"
                    android:ellipsize="end"
                    android:text="有意石锅鱼有意石锅鱼有意石锅鱼有意石锅鱼"
                    android:textColor="@color/color_101010"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="26dp"
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_shop_name"
                    android:layout_alignBottom="@+id/tv_shop_name"
                    android:layout_toLeftOf="@+id/rl_guanzhu"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginRight="5dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/rl_level"
                        android:layout_alignLeft="@+id/iv_icon"
                        android:layout_below="@+id/iv_icon"
                        android:background="@drawable/bg_c69e76_2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:lines="1"
                            android:text="Lv.1"
                            android:textColor="@color/color_white_ffffff"
                            android:textSize="11sp" />
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/iv_level"
                        android:layout_gravity="bottom"
                        android:src="@mipmap/shop_lv_jin"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_guanzhu"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_gaunzhu"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:src="@mipmap/home_guanzhu"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="@color/color_101010"
                    android:text="电话：13804583880"
                    android:id="@+id/tv_shop_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="bottom"
                    android:src="@mipmap/home_lianxi"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                image_address                <TextView
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:text="地址：松北区万达城丰源街1033号iimage_addressimage_addressimage_addressmage_address"
                    android:textSize="12sp"
                    android:textColor="@color/color_101010"
                    android:id="@+id/tv_address"
                    android:layout_toLeftOf="@+id/image_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/image_address"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/home_shop_address"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="3dp"
                    android:layout_gravity="bottom"
                    android:text="距离您158米"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:id="@+id/tv_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/home_juli"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:text="最新优惠"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:textSize="14sp"
        android:textColor="@color/color_101010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
