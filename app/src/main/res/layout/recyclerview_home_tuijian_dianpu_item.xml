<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_all"
    android:background="@drawable/bg_ffffff_5dp"
    android:layout_marginLeft="1.5dp"
    android:layout_marginRight="1.5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:paddingBottom="7dp"
    android:layout_width="172dp"
    android:layout_height="wrap_content">
    <com.yiwo.fuzhoudian.widget.CustomRoundAngleImageView
        android:id="@+id/iv_big"
        android:src="@mipmap/zanwutupian"
        test:left_top_radius_m="5dp"
        test:right_top_radius_m="5dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:elevation="3dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/my_head"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/iv_head"
                android:text="旅游达人哈哈"
                android:textSize="14sp"
                android:textColor="@color/color_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_toLeftOf="@+id/iv_head"
                android:layout_below="@+id/tv_name"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/shop_lv_jin"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/rl_level"
                    android:layout_alignLeft="@+id/iv_icon"
                    android:layout_below="@+id/iv_icon"
                    android:background="@drawable/bg_c69e76_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="0dp"
                        android:id="@+id/tv_level"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_white_ffffff"
                        android:text="Lv.1"
                        android:lines="1"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_address"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:text="哈尔滨太阳岛"
                    android:textColor="@color/color_101010"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--            <ImageView-->
<!--                android:layout_marginLeft="3dp"-->
<!--                android:layout_marginTop="3dp"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:src="@mipmap/dingwei_0420"-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"/>-->
            <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:text="美丽的太阳岛上，唯美街道漫步小镇，不要惬.."
                android:textSize="14sp"
                android:textColor="@color/color_101010"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/rl_xiangguan_shangpin"
            android:layout_marginTop="3dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/iv_guanlian"
                android:src="@mipmap/home_guanlian"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/iv_guanlian"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tv_goods"
                android:layout_marginRight="3dp"
                android:text="巴厘岛七日休闲旅"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/color_101010"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true"
                android:id="@+id/ll_see_num"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/home_liulan" />
                <TextView
                    android:id="@+id/tv_look_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="50dp"
                    android:text="35"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/color_101010"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/home_pinglun" />
                <TextView
                    android:id="@+id/tv_pinglun_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="50dp"
                    android:text="35"
                    android:textColor="@color/color_101010"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_play"
        android:src="@mipmap/play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
</RelativeLayout>
