<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.fuzhoudian.pages.ForgetPwActivity">

    <RelativeLayout style="@style/TopBarStyle">

        <RelativeLayout
            android:id="@+id/rl_set_return"
            style="@style/TopBarStyle_RlBack">

            <ImageView style="@style/TopBarStyle_IvBackWhite" />

        </RelativeLayout>

        <TextView
            android:id="@+id/titleTv"
            style="@style/TopBarStyle_TvTitle"
            android:text="忘记密码" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/headIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@mipmap/my_head" />

    <EditText

        android:id="@+id/forgetPw_phoneEt"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:ems="11"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="2dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/forgetPw_codeEt"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@null"
            android:ems="11"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:textSize="13sp" />

        <Button
            android:id="@+id/getCode_btn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="2dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/forgetPw_pwEt"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="16"
            android:gravity="center_vertical"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="13sp" />
        <ImageView
            android:layout_alignBottom="@+id/forgetPw_pwEt"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pwd_show_no"
            android:id="@+id/iv_show_pwd"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="2dp"
        android:background="@color/line" />

    <EditText
        android:id="@+id/forgetPw_confirmPwEt"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="16"
        android:gravity="center_vertical"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="2dp"
        android:background="@color/line" />

    <Button
        android:id="@+id/forgetPw_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_4e94a0_15dp"
        android:text="完成"
        android:textColor="@color/color_white_ffffff"
        android:textSize="13sp" />
</LinearLayout>
