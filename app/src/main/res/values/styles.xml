<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 使用自定义的顶部bar 样式 -->
    <style name="TopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!--顶部标题文字样式-->
    <style name="TopBarStyle_TvTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--返回图片样式-->
    <style name="TopBarStyle_IvBackWhite">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/back_ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="TopBarStyle_IvBackWhiteBlack">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/back_101010</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <!--返回RelativeLayout样式-->
    <style name="TopBarStyle_RlBack">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--顶部bar样式PX
    <RelativeLayout-->
    <style name="rl_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!--返回图片样式PX-->
    <style name="iv_return">
        <item name="android:layout_width">30px</item>
        <item name="android:layout_height">30px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@mipmap/back_ffffff</item>
        <item name="android:layout_marginLeft">25px</item>
        <item name="android:layout_marginRight">25px</item>
    </style>
    <!--返回RelativeLayout样式PX-->
    <style name="rl_return">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--顶部标题样式PX-->
    <style name="tv_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="popwindow_anim_top_in_out">
        <item name="android:windowEnterAnimation">@anim/pophiden_anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/pophiden_anim_top_out</item>
    </style>
    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--  控制popuWindow显示和隐藏 -->
    <style name="popwindowbottom_anim_style">
        <item name="android:windowEnterAnimation">@anim/popbottomshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popbottomhiden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <!--分割线样式-->
    <style name="v_split">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/color_f8f8f8</item>
    </style>
<!--    网易云视频_______________________________________________________________________________________ -->
    <style name="MediaController_Text">
        <item name="android:textColor">#7fffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/nemediacontroller_progressbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>
    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="music_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/mix_music_btn_bg_select</item>
    </style>
<!-- _________________________________________________________________________________________________________ -->
</resources>
