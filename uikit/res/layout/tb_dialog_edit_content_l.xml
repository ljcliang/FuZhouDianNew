<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_edit_content_rl_close"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/close"
            android:layout_width="12dp"
            android:layout_height="12dp" />

    </RelativeLayout>

    <TextView
        android:layout_alignLeft="@+id/dialog_edit_content_rl_content"
        android:id="@+id/dialog_edit_content_tv"
        android:layout_below="@+id/dialog_edit_content_rl_close"
        android:textSize="15sp"
        android:textColor="#333333"
        android:text="这是标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog_content"
        android:id="@+id/dialog_edit_content_rl_content"
        android:layout_marginTop="20px"
        android:layout_below="@+id/dialog_edit_content_tv"
        android:layout_width="250dp"
        android:layout_height="180dp">

        <EditText
            android:maxLength="200"
            android:id="@+id/dialog_edit_content_et_content"
            android:textColor="#333333"
            android:gravity="start"
            android:textSize="14sp"
            android:hint="请输入内容"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="180dp" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#CACACA"
            android:textSize="12dp"
            android:text="0/200"
            android:id="@+id/dialog_edit_title_tv_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/dialog_edit_content_btn_ok"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="确定"
        android:background="@drawable/bg_dialog_button"
        android:layout_below="@+id/dialog_edit_content_rl_content"
        android:layout_width="120dp"
        android:layout_height="30dp" />

</RelativeLayout>
